<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <Button
        android:id="@+id/restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="67dp"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="94dp"
        android:text="@string/restart" />

    <Button
        android:id="@+id/undo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="71dp"
        android:layout_marginRight="71dp"
        android:layout_toEndOf="@+id/restart_button"
        android:layout_toRightOf="@+id/restart_button"
        android:text="@string/undo" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_margin="10dp"
                android:text="tile 1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_margin="10dp"
                android:text="tile 2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView3"
                android:text="tile 3"
                android:textSize="24sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/textView4"
                android:text="tile 4"
                android:textSize="24sp"
                android:layout_margin="10dp"/>


        </TableRow>


        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_margin="10dp"
                android:text="tile 5"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/textView6"
                android:text="tile 6"
                android:textSize="24sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/textView7"
                android:text="tile 7"
                android:textSize="24sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/textView8"
                android:text="tile 8"
                android:textSize="24sp"
                android:layout_margin="10dp"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_margin="10dp"
                android:text="tile 9"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/textView10"
                android:text="tile 10"
                android:textSize="24sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/textView11"
                android:text="tile 11"
                android:textSize="24sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/textView12"
                android:text="tile 12"
                android:textSize="24sp"
                android:layout_margin="10dp"/>

        </TableRow>


        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView13"
                android:layout_margin="10dp"
                android:text="tile 13"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/textView14"
                android:text="tile 14"
                android:textSize="24sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/textView15"
                android:text="tile 15"
                android:textSize="24sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/textView16"
                android:text="tile 16"
                android:textSize="24sp"
                android:layout_margin="10dp"/>

        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="26dp"
        android:text="Score:" />

    <TextView
        android:id="@+id/best_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="66dp"
        android:text="Best score:" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="27dp" />

    <TextView
        android:id="@+id/best_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="66dp" />

</RelativeLayout>